$group = $this->group;

print $this->groupHeader($group);

$headers = array(
    'Name' => $this->translate('Name'),
    'UserName' => $this->translate('User'),
    'InventoryDate' => $this->translate('Last inventory'),
    'Membership' => $this->translate('Membership'),
);

$renderCallbacks = array(
    'Name' => 'renderName',
    'Membership' => 'renderMembership',
);

function renderName($view, $computer)
{
    return $view->htmlTag(
        'a',
        $view->escape($computer->getName()),
        array(
            'href' => $view->url(
                array(
                    'controller' => 'computer',
                    'action' => 'groups',
                    'id' => $computer->getId(),
                )
            ),
        ),
        true
    );
}

function renderMembership($view, $computer)
{
    return $view->membershipType($computer->getMembership());
}

$table = $this->getHelper('table')->table(
    $this->computers,
    $this->columns,
    $headers,
    array(),
    'Model_Computer',
    null,
    $renderCallbacks,
    $count
);

print $this->htmlTag(
    'p',
    sprintf(
        $this->translate('Number of computers: %d'),
        $count
    ),
    array('class' => 'textcenter')
);

$creationDate = $group->getCacheCreationDate();
$update = sprintf(
    $this->translate('Last update: %s'),
    $creationDate ? $creationDate->get(Zend_Date::DATETIME_MEDIUM) : '&ndash;'
);
$update .= "<br>\n";
$expirationDate = $group->getCacheExpirationDate();
$update .= sprintf(
    $this->translate('Next update: %s'),
    $expirationDate ? $expirationDate->get(Zend_Date::DATETIME_MEDIUM) : '&ndash;'
);

print $this->htmlTag(
    'p',
    $update,
    array('class' => 'textcenter')
);

print $table;
