 <table>

  <name>bios</name>

  <description>
    Information about a machine's BIOS, including the serial number ("ssn") for identifying duplicates.
  </description>

  <declaration>

   <field>
    <name>hardware_id</name>
    <type>integer</type>
    <length>4</length>
    <notnull>true</notnull>
   </field>

   <field>
    <name>smanufacturer</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>smodel</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>ssn</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>type</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>bmanufacturer</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>bversion</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>bdate</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>assettag</name>
    <type>text</type>
    <length>255</length>
   </field>

   <index>
    <name>bios_primary</name>
    <primary>true</primary>
    <field>
     <name>hardware_id</name>
    </field>
   </index>

   <index>
    <name>bios_ssn</name>
    <field>
     <name>ssn</name>
    </field>
   </index>

   <index>
    <name>bios_assettag</name>
    <field>
     <name>assettag</name>
    </field>
   </index>

  </declaration>

 </table>
