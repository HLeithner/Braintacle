 <table>

  <name>netmap</name>

  <description>
    MAC-to-IP mapping.
  </description>

  <declaration>

   <field>
    <name>ip</name>
    <type>text</type>
    <length>15</length>
    <notnull>true</notnull>
   </field>

   <field>
    <name>mac</name>
    <type>text</type>
    <length>17</length>
    <notnull>true</notnull>
   </field>

   <field>
    <name>mask</name>
    <type>text</type>
    <length>15</length>
    <notnull>true</notnull>
   </field>

   <field>
    <name>netid</name>
    <type>text</type>
    <length>15</length>
    <notnull>true</notnull>
   </field>

   <field>
    <name>date</name>
    <type>timestamp</type>
    <notnull>true</notnull>
   </field>

   <field>
    <name>name</name>
    <type>text</type>
    <length>255</length>
   </field>

   <index>
    <name>netmap_primary</name>
    <primary>true</primary>
    <field>
     <name>mac</name>
    </field>
   </index>

   <index>
    <name>netmap_ip</name>
    <field>
     <name>ip</name>
    </field>
   </index>

   <index>
    <name>netmap_netid</name>
    <field>
     <name>netid</name>
    </field>
   </index>

  </declaration>

 </table>

