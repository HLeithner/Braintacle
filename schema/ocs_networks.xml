 <table>

  <name>networks</name>

  <description>
    A machine's network interfaces.
  </description>

  <declaration>

   <field>
    <name>id</name>
    <type>integer</type>
    <length>4</length>
    <notnull>true</notnull>
    <autoincrement>1</autoincrement>
   </field>

   <field>
    <name>hardware_id</name>
    <type>integer</type>
    <length>4</length>
    <notnull>true</notnull>
   </field>

   <field>
    <name>description</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>type</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>typemib</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>speed</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>macaddr</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>status</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>ipaddress</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>ipmask</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>ipgateway</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>ipsubnet</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>ipdhcp</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>virtualdev</name>
    <type>boolean</type>
    <default>0</default>
   </field>

   <index>
    <name>networks_primary</name>
    <primary>true</primary>
    <field>
     <name>id</name>
    </field>
   </index>

   <index>
    <name>networks_hardware_id</name>
    <field>
     <name>hardware_id</name>
    </field>
   </index>

   <index>
    <name>networks_macaddr</name>
    <field>
     <name>macaddr</name>
    </field>
   </index>

   <index>
    <name>networks_ipaddress</name>
    <field>
     <name>ipaddress</name>
    </field>
   </index>

   <index>
    <name>networks_ipgateway</name>
    <field>
     <name>ipgateway</name>
    </field>
   </index>

   <index>
    <name>networks_ipsubnet</name>
    <field>
     <name>ipsubnet</name>
    </field>
   </index>

  </declaration>

 </table>
