 <table>

  <name>operators</name>

  <description>
    User accounts for the administration console.
  </description>

  <declaration>

   <field>
    <name>id</name>
    <type>text</type>
    <length>255</length>
    <notnull>true</notnull>
   </field>

   <field>
    <name>firstname</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>lastname</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>passwd</name>
    <type>text</type>
    <length>50</length>
   </field>

   <field>
    <name>accesslvl</name>
    <type>integer</type>
    <length>4</length>
   </field>

   <field>
    <name>comments</name>
    <type>clob</type>
   </field>

   <field>
    <name>new_accesslvl</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>email</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>user_group</name>
    <type>text</type>
    <length>255</length>
   </field>

   <index>
    <name>operators_primary</name>
    <primary>true</primary>
    <field>
     <name>id</name>
    </field>
   </index>

  </declaration>

  <initialization>

   <update>
    <field>
     <name>new_accesslvl</name>
     <value>sadmin</value>
    </field>
    <where>
     <expression>
      <column>accesslvl</column>
      <operator>EQUAL</operator>
      <value>1</value>
     </expression>
    </where>
   </update>

   <update>
    <field>
     <name>new_accesslvl</name>
     <value>ladmin</value>
    </field>
    <where>
     <expression>
      <column>accesslvl</column>
      <operator>EQUAL</operator>
      <value>2</value>
     </expression>
    </where>
   </update>

   <update>
    <field>
     <name>new_accesslvl</name>
     <value>admin</value>
    </field>
    <where>
     <expression>
      <column>accesslvl</column>
      <operator>EQUAL</operator>
      <value>3</value>
     </expression>
    </where>
   </update>

  </initialization>

 </table>
