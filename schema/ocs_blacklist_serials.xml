 <table>

  <name>blacklist_serials</name>

  <description>
    List of BIOS serial numbers which will not be used for identifying duplicates.
  </description>

  <declaration>

   <field>
    <name>id</name>
    <type>integer</type>
    <length>4</length>
    <notnull>true</notnull>
    <autoincrement>true</autoincrement>
   </field>

   <field>
    <name>serial</name>
    <type>text</type>
    <length>255</length>
    <notnull>true</notnull>
   </field>

   <index>
    <name>blacklist_serials_primary</name>
    <primary>true</primary>
    <field>
     <name>id</name>
    </field>
   </index>

   <index>
    <name>blacklist_serials_serial</name>
    <unique>true</unique>
    <field>
     <name>serial</name>
    </field>
   </index>

  </declaration>

 </table>
