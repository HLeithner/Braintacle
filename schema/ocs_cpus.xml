 <table>

  <name>cpus</name>

  <description>
      A computer's physical CPUs
  </description>

  <declaration>

   <field>
    <name>id</name>
    <type>integer</type>
    <length>4</length>
    <notnull>true</notnull>
    <autoincrement>1</autoincrement>
   </field>

   <field>
    <name>hardware_id</name>
    <type>integer</type>
    <length>4</length>
    <notnull>true</notnull>
   </field>

   <field>
    <name>manufacturer</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>type</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>serialnumber</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>speed</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>cores</name>
    <type>integer</type>
    <length>4</length>
   </field>

   <field>
    <name>l2cachesize</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>cpuarch</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>data_width</name>
    <type>integer</type>
    <length>4</length>
   </field>

   <field>
    <name>current_address_width</name>
    <type>integer</type>
    <length>4</length>
   </field>

   <field>
    <name>logical_cpus</name>
    <type>integer</type>
    <length>4</length>
   </field>

   <field>
    <name>voltage</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>current_speed</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>socket</name>
    <type>text</type>
    <length>255</length>
   </field>

   <index>
    <name>cpus_primary</name>
    <primary>true</primary>
    <field>
     <name>id</name>
    </field>
   </index>

   <index>
    <name>cpus_hardware_id</name>
    <field>
     <name>hardware_id</name>
    </field>
   </index>

  </declaration>

 </table>

