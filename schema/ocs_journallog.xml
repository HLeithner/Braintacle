  <table>

  <name>journallog</name>

  <declaration>

   <field>
    <name>id</name>
    <type>integer</type>
    <notnull>true</notnull>
    <autoincrement>1</autoincrement>
    <length>4</length>
   </field>

   <field>
    <name>hardware_id</name>
    <type>integer</type>
    <notnull>true</notnull>
    <length>4</length>
   </field>

   <field>
    <name>journallog</name>
    <type>clob</type>
   </field>

   <field>
    <name>listenername</name>
    <type>text</type>
    <default>NONAME</default>
    <length>255</length>
   </field>

   <field>
    <name>date</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>status</name>
    <type>integer</type>
    <default>0</default>
    <length>4</length>
   </field>

   <field>
    <name>errorcode</name>
    <type>integer</type>
    <default>0</default>
    <length>4</length>
   </field>

   <index>
    <name>journallog_primary</name>
    <primary>true</primary>
    <field>
     <name>id</name>
    </field>
   </index>

   <index>
    <name>journallog_hardware_id</name>
    <field>
     <name>hardware_id</name>
    </field>
   </index>

  </declaration>

 </table>
