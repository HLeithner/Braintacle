 <table>

  <name>snmp_accountinfo</name>

  <description>
    The structure of this table is not static.
    It may contain extra user-defined columns with additional information for a machine.
  </description>

  <declaration>

   <field>
    <name>snmp_id</name>
    <type>integer</type>
    <length>4</length>
    <notnull>true</notnull>
   </field>

   <field>
    <name>tag</name>
    <type>text</type>
    <length>255</length>
    <default>NA</default>
   </field>

   <index>
    <name>snmp_accountinfo_primary</name>
    <primary>true</primary>
    <field>
     <name>snmp_id</name>
    </field>
   </index>

   <index>
    <name>snmp_accountinfo_tag</name>
    <field>
     <name>tag</name>
    </field>
   </index>

  </declaration>

 </table>
