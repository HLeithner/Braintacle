 <table>

  <name>hardware</name>

  <description>
    Machines and groups. Groups have a deviceid of '_SYSTEMGROUP_'.
  </description>

  <declaration>

   <field>
    <name>id</name>
    <type>integer</type>
    <length>4</length>
    <notnull>true</notnull>
    <autoincrement>1</autoincrement>
   </field>

   <field>
    <name>deviceid</name>
    <type>text</type>
    <length>255</length>
    <notnull>true</notnull>
   </field>

   <field>
    <name>name</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>workgroup</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>userdomain</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>osname</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>osversion</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>oscomments</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>processort</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>processors</name>
    <type>integer</type>
    <length>4</length>
    <default>0</default>
   </field>

   <field>
    <name>processorn</name>
    <type>integer</type>
    <length>2</length>
   </field>

   <field>
    <name>memory</name>
    <type>integer</type>
    <length>4</length>
   </field>

   <field>
    <name>swap</name>
    <type>integer</type>
    <length>4</length>
   </field>

   <field>
    <name>ipaddr</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>etime</name>
    <type>integer</type>
    <length>4</length>
   </field>

   <field>
    <name>lastdate</name>
    <type>timestamp</type>
   </field>

   <field>
    <name>lastcome</name>
    <type>timestamp</type>
   </field>

   <field>
    <name>quality</name>
    <type>decimal</type>
    <length>7,4</length>
   </field>

   <field>
    <name>fidelity</name>
    <type>integer</type>
    <length>8</length>
    <default>1</default>
   </field>

   <field>
    <name>userid</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>type</name>
    <type>integer</type>
    <length>4</length>
   </field>

   <field>
    <name>description</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>wincompany</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>winowner</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>winprodid</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>winprodkey</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>useragent</name>
    <type>text</type>
    <length>50</length>
   </field>

   <field>
    <name>dns</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>defaultgateway</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>checksum</name>
    <type>integer</type>
    <length>8</length>
    <unsigned>true</unsigned>
    <default>262143</default>
   </field>

   <field>
    <name>sstate</name>
    <type>integer</type>
    <length>4</length>
    <default>0</default>
   </field>

   <field>
    <name>ipsrc</name>
    <type>text</type>
    <length>255</length>
   </field>

   <field>
    <name>uuid</name>
    <type>text</type>
    <length>255</length>
   </field>

   <index>
    <name>hardware_primary</name>
    <primary>true</primary>
    <field>
     <name>id</name>
    </field>
   </index>

   <index>
    <name>hardware_deviceid</name>
    <field>
     <name>deviceid</name>
    </field>
   </index>

   <index>
    <name>hardware_name</name>
    <field>
     <name>name</name>
    </field>
   </index>

   <index>
    <name>hardware_checksum</name>
    <field>
     <name>checksum</name>
    </field>
   </index>

   <index>
    <name>hardware_userid</name>
    <field>
     <name>userid</name>
    </field>
   </index>

   <index>
    <name>hardware_workgroup</name>
    <field>
     <name>workgroup</name>
    </field>
   </index>

   <index>
    <name>hardware_osname</name>
    <field>
     <name>osname</name>
    </field>
   </index>

   <index>
    <name>hardware_memory</name>
    <field>
     <name>memory</name>
    </field>
   </index>

  </declaration>

 </table>
