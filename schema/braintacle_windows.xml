 <table>

  <name>braintacle_windows</name>

  <description>
    Windows-specific information that is not stored in the hardware table
  </description>

  <declaration>

   <field>
    <name>hardware_id</name>
    <type>integer</type>
    <length>4</length>
    <notnull>true</notnull>
   </field>

   <field>
    <name>manual_product_key</name>
    <type>text</type>
    <length>29</length>
    <description>
        Manually entered product key that may differ from the key discovered by
        the agent. Should be of the form AAAAA-AAAAA-AAAAA-AAAAA-AAAAA (all
        uppercase letters and digits, with dashes in the correct location).
        Should be NULL if not different from the discovered key.
    </description>
   </field>

   <index>
    <name>braintacle_windows_primary</name>
    <primary>true</primary>
    <field>
     <name>hardware_id</name>
    </field>
   </index>

  </declaration>

 </table>
