 <table>

  <name>download_available</name>

  <description>
    All available packages.
  </description>

  <declaration>

   <field>
    <name>fileid</name>
    <type>text</type>
    <length>255</length>
    <notnull>true</notnull>
   </field>

   <field>
    <name>name</name>
    <type>text</type>
    <length>255</length>
    <notnull>true</notnull>
   </field>

   <field>
    <name>priority</name>
    <type>integer</type>
    <length>4</length>
    <notnull>true</notnull>
   </field>

   <field>
    <name>fragments</name>
    <type>integer</type>
    <length>4</length>
    <notnull>true</notnull>
   </field>

   <field>
    <name>size</name>
    <type>integer</type>
    <length>4</length>
    <notnull>true</notnull>
   </field>

   <field>
    <name>osname</name>
    <type>text</type>
    <length>255</length>
    <notnull>true</notnull>
   </field>

   <field>
    <name>comment</name>
    <type>clob</type>
   </field>

   <index>
    <name>download_available_primary</name>
    <primary>true</primary>
    <field>
     <name>fileid</name>
    </field>
   </index>

  </declaration>

 </table>
