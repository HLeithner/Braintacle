 <table>

  <name>locks</name>

  <description>
    A locking mechanism for concurrency control.
  </description>

  <declaration>

   <field>
    <name>hardware_id</name>
    <type>integer</type>
    <length>4</length>
    <notnull>true</notnull>
   </field>

   <field>
    <name>id</name>
    <type>integer</type>
    <length>4</length>
   </field>

   <field>
    <name>since</name>
    <type>timestamp</type>
    <notnull>true</notnull>
   </field>

   <index>
    <name>locks_primary</name>
    <primary>true</primary>
    <field>
     <name>hardware_id</name>
    </field>
   </index>

   <index>
    <name>locks_since</name>
    <field>
     <name>since</name>
    </field>
   </index>

  </declaration>

 </table>
 
